<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.homeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Selamat Datang di Aplikasi PT. Saba Pratama"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMasterBarang"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:background="#FF4081"
        android:drawableTop="@drawable/archive"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="Master Barang"
        android:textColor="#e8e9e9"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPurchaseOrder"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnMasterBarang"
        android:layout_marginTop="25dp"
        android:background="#FF4081"
        android:drawableTop="@drawable/bookvariant"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="Purchase Order"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnKartuStok"
        android:layout_below="@id/btnPurchaseOrder"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:background="#FF4081"
        android:drawableTop="@drawable/notemultiple"
        android:layout_marginTop="25dp"
        android:paddingBottom="5dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="Kartu Stok"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
</RelativeLayout>